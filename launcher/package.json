{
  "name": "igslauncher",
  "productName": "IGS Launcher",
  "author": "ISEL Game Studios, Gabriel Teixeira",
  "version": "0.0.3",
  "description": "",
  "main": "src/js/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gooberW/IGSLauncher.git"
  },
  "bugs": {
    "url": "https://github.com/gooberW/IGSLauncher/issues"
  },
  "homepage": "https://github.com/gooberW/IGSLauncher#readme",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.iselgamestudios.igslauncher",
    "files": [
      "src/**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "icon": "src/assets/icon.png"
    }
  }
}
